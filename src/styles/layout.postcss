$header-height-xl: 120;
$header-height: 100;
$header-height-mb: 70;
$timeline-height: 45;
$timeline-height-mb: 70;
$credits-height-mb: 25;
$l-margin-vt: 56;

.wrap {
  position: relative;
  width: 100%;
  margin: 0 auto;
  padding: 0 $wrap-padding-mobile;

  @media screen and (min-width: $screen-s) {
    padding: 0 $wrap-padding-tablet;
  }

  @media screen and (min-width: $screen-m) {
    padding: 0 $wrap-padding-desktop;
  }

  @media screen and (min-width: $screen-xl) {
    padding: 0 $wrap-padding-desktop-xl;
  }

  @media screen and (min-width: $screen-xxl) {
    padding: 0 $wrap-padding-desktop-xxl;
  }
}

.l-app {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  overflow: hidden;

  .l-header {
    position: absolute;
    pointer-events: none;
  }

  .logo {
    pointer-events: visible;
    cursor: default;
  }
}

.-embed-element {
  display: none !important;
}

.l-map {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;

  cursor: pointer;
}


.l-share {
  position: absolute;
  top: rem(70);
  right: $wrap-padding-mobile;
  width: rem(35);
  height: rem(35);
  background-color: $color-1;
  padding: rem(7);

  @media screen and (min-width: $screen-s) {
    right: $wrap-padding-tablet;
  }

  @media screen and (min-width: $screen-m) {
    right: $wrap-padding-desktop;
    top: rem(203);
  }

  @media screen and (min-width: $screen-l) {
    top: rem(215);
  }

  @media screen and (min-width: $screen-xl) {
    top: rem(227);
    right: $wrap-padding-desktop-xl;
  }

  @media screen and (min-width: $screen-xxl) {
    right: $wrap-padding-desktop-xxl;
  }

  .icon {
    width: 100%;
    height: 100%;
    fill: $color-13;
  }
}


.l-header {
  display: flex;
  flex: 1 1 100%;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: rem($header-height-mb);
  z-index: 1;

  @media screen and (min-width: $screen-m) {
    height: rem($header-height);
  }

  @media screen and (min-width: $screen-xl) {
    height: rem($header-height-xl);
  }

  > .wrap {
    display: flex;
    flex: 1 1 100%;
    justify-content: space-between;
    align-items: center;

    @media screen and (min-width: $screen-m) {
      justify-content: center;
    }
  }

  .menu-link:hover {
    color: $color-1;
  }
}

.l-dashboard {
  position: absolute;
  left: 0;
  right: 0;
  bottom: rem(95);
  height: rem(220);
  background-color: #ddd;
  background-image: url('../src/images/legendpattern.jpg');
  background-size: contain;
  transition: transform .5s ease-out;
  transform: translatey(rem(220));

  @media screen and (min-width: $screen-m) {
    position: absolute;
    left: $wrap-padding-desktop;
    top: rem(120);
    height: auto;
    bottom: rem(270);
    width: rem(285);
    transform: translatex(rem(-325));
    /* max-height: 600px; */

    @media screen and (max-height: rem(750)) {
      bottom: rem(120);
    }
  }

  @media screen and (min-width: $screen-l) {
    top: rem(116);
  }

  @media screen and (min-width: $screen-xl) {
    top: rem(130);
    width: rem(360);
    transform: translatex(0);
    left: $wrap-padding-desktop-xl;
    bottom: rem(180);

    @media screen and (max-height: rem(750)) {
      bottom: rem(120);
    }
  }

  @media screen and (min-width: $screen-xxl) {
    width: rem(400);
    left: $wrap-padding-desktop-xxl;
    bottom: rem(350);

    @media screen and (max-height: rem(750)) {
      bottom: rem(120);
    }
  }

  &.is-open {
    &.-pc {
      transform: translatex(0);
    }

    &.-mobile {
      transform: translatey(0);
    }
  }

  .is-embed & {
    bottom: 0;

    @media screen and (min-width: $screen-m) {
      bottom: rem(200);

      @media screen and (max-height: rem(750)) {
        bottom: rem(60);
      }
    }
  }
}

.l-dash-tabs {
  position: fixed;
  top: rem($header-height-mb);
  left: $wrap-padding-mobile;
  right: rem(60);
  height: rem($timeline-height);

  @media screen and (min-width: $screen-s) {
    left: $wrap-padding-tablet;
    right: rem(70);
  }

  @media screen and (min-width: $screen-m) {
   position: relative;
   top: 0;
   left: 0;
   right: 0;
   height: auto;
  }

  .is-embed & {
    right: $wrap-padding-mobile;
  }
}

.l-dash-panel {
}

.l-dash-legend {
}


.l-timeline {
  position: absolute;
  bottom: rem($credits-height-mb);
  left: 0;
  right: 0;
  height: rem($timeline-height-mb);
  border-top: 1px solid $color-17;

  @media screen and (min-width: $screen-m) {
    border-top: 0;
    height: rem($timeline-height);
    right: 250px;
    left: $wrap-padding-desktop;
    bottom: rem($l-margin-vt);
  }

  @media screen and (min-width: $screen-l) {
    bottom: rem(30);
  }

  @media screen and (min-width: $screen-xl) {
    left: $wrap-padding-desktop-xl;
    bottom: rem(57);
  }

  @media screen and (min-width: $screen-xxl) {
    left: $wrap-padding-desktop-xxl;
    bottom: rem(47);
  }

  .is-embed &  {
    display: none;
  }
}

.l-map-credits {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: rem($credits-height-mb);
  background-color: $color-15;
  border-top: 1px solid $color-7;
  padding: 0 $wrap-padding-mobile;

  @media screen and (min-width: $screen-m) {
    /* justify-content: center; */
    padding: 0 $wrap-padding-desktop;
    border: 0;
  }

  @media screen and (min-width: $screen-xl) {
    /* justify-content: flex-start; */
    padding: 0 $wrap-padding-desktop-xl;
  }

  @media screen and (min-width: $screen-xxl) {
    /* justify-content: flex-start; */
    padding: 0 $wrap-padding-desktop-xxl;
  }

  & div:last-child {
    width: rem(165);
    height: 100%;

    @media screen and (min-width: $screen-xxl) {
      width: rem(125);
    }
  }

  .about-credits-container {
    display: flex;
  }

  .care-page-link {
    display: none;
    cursor: pointer;

    @media screen and (min-width: $screen-m) {
      display: inherit;
    }

    p {
      margin-right: rem(5);

      @media screen and (min-width: $screen-xxl) {
        margin-right: rem(8);
      }
    }

    a {
      text-decoration: none;
      font-weight: 700;
    }
  }

  .text-cta {
    display: none;
    margin-top: rem(1);

    @media screen and (min-width: $screen-m) {
      display: inherit;
    }

    @media screen and (min-width: $screen-xl) {
      margin-top: rem(3);
    }
  }

  .btn-about {
    cursor: pointer;
    display:flex;
    align-items: center;
    margin-bottom: rem(1);

    @media screen and (min-width: $screen-m) {
      margin-left: rem(6);
      margin-right: rem(20);
    }
  }
}

.l-donate {
  display: none;

  @media screen and (min-width: $screen-m) {
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: rem($timeline-height);
    line-height: rem($timeline-height);
    text-align: center;
    background-color: $color-3;
    text-transform: uppercase;
    color: $font-color-3;
    text-decoration: none;
    font-family: $font-family-2;
    font-weight: 700;
    font-size: rem(11);
    right: $wrap-padding-desktop;
    width: rem(160);
    left: auto;
    bottom: rem($l-margin-vt);
  }

  @media screen and (min-width: $screen-l) {
    bottom: rem(30);
  }

  @media screen and (min-width: $screen-xl) {
    right: $wrap-padding-desktop-xl;
    bottom: rem(57);
  }

  @media screen and (min-width: $screen-xxl) {
    right: $wrap-padding-desktop-xxl;
    bottom: rem(47);
  }
}
