@import'../../styles/settings.postcss';
@import'../../styles/helpers.postcss';

.m-main-menu {
  .btn-menu-toggle {
    width: rem(30);
    height: rem(30);

    @media screen and (min-width: $screen-m) {
      display: none;
    }
  }

  .menu {
    display: none;
    list-style: none;

    @media screen and (min-width: $screen-m) {
      display: flex;
      flex: 1 1 auto;
      justify-content: flex-end;
      align-items: center;
    }

    .loog {
      height: rem(175);
    }
  }

  .menu-link {
    position: relative;
    color: $font-color-2;
    margin-right: rem(50);
    font-size: rem(20);
    font-weight: 700;
    line-height: rem(18);
    text-decoration: none;

    &:last-child {
      margin-left: 0;
    }

    &.is-active {
      &:after {
        content: "";
        position: absolute;
        bottom: rem(-10);
        left: 0;
        right: 0;
        height: rem(4);
        background-color: $color-1;
      }
    }
  }
}
