@import'../../styles/settings.postcss';
@import'../../styles/helpers.postcss';

.m-dash-dates {
  display: flex;
  flex: 1 1 100%;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid $color-7;
  padding-bottom: rem(5);
  padding-top: rem(5);

  @media screen and (min-width: $screen-m) {
    padding-bottom: rem(10);
    padding-top: 0;
  }

  .icon {
    width: rem(15);
    height: rem(15);
    margin-right: rem(10);
    cursor: pointer;

    @media screen and (min-width: $screen-m) {
      width: rem(20);
      height: rem(20);
    }
  }

  .dates {
    margin-top: rem(5);
  }

}
