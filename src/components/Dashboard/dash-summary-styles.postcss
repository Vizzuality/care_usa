@import'../../styles/settings.postcss';

.m-dash-summary {
  padding: rem(15) 0 rem(25);
  border-bottom: 1px solid $color-7;
  
 .summary-item {
    width: 100%;
    display: flex;
    flex: 1 1 100%;
    justify-content: space-between;
    align-items: center;
    margin-bottom: rem(10);
  }

  .text {
    color: $font-color-1;
  }

  .number {
    color: $font-color-2;
  }
}
