@import'../../styles/settings.postcss';

.m-modal {
	.content {
		display: block !important;

		@media screen and (min-width: $screen-l) {
			padding-left: 8.62%;
			padding-right: 8.62%;
		}
	}

	.text-module-title {
		margin: rem(10) 0 rem(30) 0;

		@media screen and (min-width: $screen-l) {
			margin: rem(19) 0 rem(38) 0;
		}
	}
}

.about-label {
	cursor: pointer;
}

.about-label:hover {
	color: $orange-tangerine;
}