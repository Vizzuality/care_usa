@import'../../styles/settings.postcss';



.modal-video {
	position: fixed;
	z-index: 50;

	.content {
		max-height: 100% !important;
		display: flex;
		align-items: center;
	}

	.video-container {
		width: 100%;
		padding: rem(60) rem(20);
		height: rem(400);

		@media screen and (min-width: $screen-m) {
	      max-height: rem(500);
	    }

	    @media screen and (min-width: $screen-l) {
	      height: rem(650);
	    }

		.video {
			width: 100%;
			height: 100%;
		}
	}
}
